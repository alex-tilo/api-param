{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "ack":      {"type": "integer", "enum": [1]},
    "errors": {"type": "array","items": [
        {
          "type": "object",
          "properties": {"code": {"type": "string", "enum": ["4004"]},
            "message":  {"type": "string", "enum": ["Something went wrong. Please try again."]},
            "type":     {"type": "string", "enum": ["Error fetching database"]},
            "category": {"type": "string", "enum": ["database_error"]},
            "vendor":   {"type": "string", "enum": ["SNG Backend"]}
          },
          "required": ["code","message","type","category","vendor"]
        }
      ]
    }
  },
  "required": ["ack","errors"]
}