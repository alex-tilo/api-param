{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "accounts": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "fdAccountId": {"type": "string"},
            "type": {"type": "string", "enum": ["CREDIT"]},
            "status": {"type": "string", "enum": ["ACTIVE"]},
            "credit": {
              "type": "object",
              "properties": {
                "nameOnCard": {
                  "type": "string"
                },
                "alias": {
                  "type": "string"
                },
                "cardType": {
                  "type": "string"
                },
                "billingAddress": {
                  "type": "object",
                  "properties": {
                    "postalCode": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "postalCode"
                  ]
                },
                "expiryDate": {
                  "type": "object",
                  "properties": {
                    "month": {
                      "type": "string"
                    },
                    "year": {
                      "type": "string"
                    },
                    "singleValue": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "month",
                    "year",
                    "singleValue"
                  ]
                },
                "token": {
                  "type": "object",
                  "properties": {
                    "tokenType": {
                      "type": "string"
                    },
                    "tokenProvider": {
                      "type": "string"
                    },
                    "tokenId": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "tokenType",
                    "tokenProvider",
                    "tokenId"
                  ]
                }
              },
              "required": [
                "nameOnCard",
                "alias",
                "cardType",
                "billingAddress",
                "expiryDate",
                "token"
              ]
            },
            "token": {
              "type": "object",
              "properties": {
                "tokenType": {
                  "type": "string"
                },
                "tokenProvider": {
                  "type": "string"
                },
                "tokenId": {
                  "type": "string"
                }
              },
              "required": [
                "tokenType",
                "tokenProvider",
                "tokenId"
              ]
            },
            "hostExtraInfo": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["name","value"]
                }
              ]
            },
            "dateCreated": {
              "type": "string"
            },
            "dateModified": {
              "type": "string"
            }
          },
          "required": [
            "fdAccountId",
            "type",
            "status",
            "credit",
            "token",
            "hostExtraInfo",
            "dateCreated",
            "dateModified"
          ]
        }
      ]
    },
    "ack":              {"type": "string", "enum": ["0"]},
    "hrLimitReached":   {"type": "boolean", "enum": [false]},
    "defaultCard":      {"type": "string"},
    "applePayFlag":     {"type": "boolean", "enum": [false]}
  },
  "required": ["accounts","ack","hrLimitReached","defaultCard","applePayFlag"]
}

