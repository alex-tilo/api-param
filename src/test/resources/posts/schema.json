{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name":           {"type": "string", "pattern": "[A-za-z]{1,20}"},
    "salary":         {"type": "string", "pattern": "[0-9]{1,6}"},
    "age":            {"type": "string", "pattern": "[0-9]{1,3}"},
    "id":             {"type": "integer", "pattern": "[0-9]{3}"}
  },
  "required":         ["name","salary","age","id"]
}
